{
  "name": "create-4n-app",
  "version": "1.0.1",
  "description": "Interactive CLI to scaffold 4n-stack projects",
  "bin": {
    "create-4n-app": "./bin/index.js"
  },
  "type": "module",
  "main": "bin/index.js",
  "scripts": {
    "dev": "node bin/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "keywords": [
    "cli",
    "create-app",
    "4n-stack"
  ],
  "author": "Naren",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.4.1",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.0",
    "ora": "^7.0.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.5",
    "ultracite": "5.0.32"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
